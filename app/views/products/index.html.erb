<h1>Products</h1>

<% if @products.empty? %>
	<b>No products</b>
<% else %>
<table>
	<tr>
		<th>Product id </th>
		<th>Name</th>
		<th>Type</th>
		<th>Price</th>
		<th>Description</th>
	</tr>
	
	<% @products.each do |i| %>
	<tr>
		<td><%= i.id %></td>
		<td><%= link_to i.name, product_path(i) %></td>
		<td><%= i.type_of_product %></td>
		<td><%= i.price %> Руб.</td>
		<td><%= i.description %></td>
		<td><%= link_to "Удалить продукт", i, method: :delete, data: { confirm: "Вы уверены?"}%></td>
	</tr>
	<% end %>
</table>
	<% end %>
